@model SIMS.Models.TeacherDetail

@{
    ViewData["title"] = "Add Teacher";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-6">
        <h2>Add Teacher</h2>

        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger my-2">@TempData["error"]</div>
        }

        <form asp-action="Add" asp-controller="Teacher" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" required />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Subject" class="form-label">Subject</label>
                <input asp-for="Subject" class="form-control" required />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ViewAvatar" class="form-label">Avatar</label>
                <input asp-for="ViewAvatar" type="file" class="form-control" accept="image/*" required />
                <span asp-validation-for="ViewAvatar" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add Teacher</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

