@model SIMS.Models.TeacherViewModel

@{
    ViewData["title"] = "Teacher";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <h2>Teacher Page</h2>
        <a class="btn btn-primary" href="@Url.Action("Add", "Teacher")">Add Teacher</a>

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success my-2">@TempData["success"]</div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger my-2">@TempData["error"]</div>
        }

        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Avatar</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Subject</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TeacherList)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Avatar))
                            {
                                <img src="~/uploads/teachers/@item.Avatar" width="60" alt="Avatar" />
                            }
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.Subject</td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Teacher", new { id = item.Id })">Edit</a>
                            <form method="post" asp-action="Delete" asp-controller="Teacher" onsubmit="return confirm('Are you sure you want to delete this teacher?');" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
