@model SIMS.Models.StudentDetail

@{
    ViewData["Title"] = "Edit Student";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <h2>Edit Student</h2>
        <a class="btn btn-info" href="@Url.Action("Index", "Student")">Back to Student List</a>

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success">@TempData["success"]</div>
        }
        else if (TempData["error"] != null)
        {
            <div class="alert alert-danger">@TempData["error"]</div>
        }

        <div class="card mt-3">
            <div class="card-body">
                <form method="post" asp-action="Edit" asp-controller="Student" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Full Name (*)</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StudentCode" class="form-label">Student Code (*)</label>
                        <input asp-for="StudentCode" class="form-control" />
                        <span asp-validation-for="StudentCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email (*)</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Course" class="form-label">Course (*)</label>
                        <select asp-for="Course" class="form-control" asp-items="Model.CourseList">
                            <option value="">-- Select Course --</option>
                        </select>
                        <span asp-validation-for="Course" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Avatar</label>
                        <input type="file" class="form-control" name="ViewAvatar" />
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <div class="mt-2">
                            <img src="@Url.Content("~/uploads/students/" + Model.Avatar)" alt="Student Avatar" width="100" />
                        </div>
                    }

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
