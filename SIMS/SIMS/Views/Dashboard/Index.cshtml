@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark p-3">
        <a class="navbar-brand text-white" href="#">SIMS Dashboard</a>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Main Content -->
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Students</h5>
                                <p class="card-text display-4">@ViewData["TotalStudents"]</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Courses</h5>
                                <p class="card-text display-4">@ViewData["TotalCourses"]</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-warning mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Number of Lecturers</h5>
                                <p class="card-text display-4">@ViewData["TotalTeachers"]</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        🔔 New announcement
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">This week's schedule has been updated.</li>
                        <li class="list-group-item">Course registration deadline: April 30th</li>
                        <li class="list-group-item">Midterm exam results announced</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>