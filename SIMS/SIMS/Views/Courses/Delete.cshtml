@model SIMS.Models.CoursesDetail

@{
    ViewData["title"] = "Delete Course";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <h2>Delete Course</h2>
        <a class="btn btn-info" href="@Url.Action("Index", "Courses")">Back</a>

        <div class="alert alert-danger mt-3">
            <h4>Are you sure you want to delete this course?</h4>
        </div>

        <table class="table table-bordered mt-3">
            <tr>
                <th>Id</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Courses Name</th>
                <td>@Model.CoursesName</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>@Model.Subject</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "N/A")</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "N/A")</td>
            </tr>
        </table>

        <form method="post" asp-action="Delete" asp-controller="Courses">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Courses")">Cancel</a>
        </form>
    </div>
</div>
